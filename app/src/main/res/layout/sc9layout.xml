<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:text=" How many Tomatoes?"
        android:textColor="#fff"
        android:textSize="30dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_above="@+id/relativeLayout5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:src="@mipmap/tomato"
        app:srcCompat="@mipmap/tomato" />

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp">

        <Button
            android:id="@+id/button25"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/button26"
            android:background="#d3d3d3"
            android:onClick="onClick"
            android:text="4"
            android:textSize="35dp" />

        <Button
            android:id="@+id/button26"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/button25"
            android:layout_centerHorizontal="true"
            android:background="#d3d3d3"
            android:onClick="onClick"
            android:text="6"
            android:textSize="35dp" />

        <Button
            android:id="@+id/button27"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/button26"
            android:background="#d3d3d3"
            android:onClick="onClick"
            android:text="5"
            android:textSize="35dp" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:layout_marginStart="20dp"
            android:onClick="onClick"
            android:src="@drawable/back" />


    </RelativeLayout>
</RelativeLayout>
