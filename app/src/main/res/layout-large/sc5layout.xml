<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="550dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text=" How many Butterfly?"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="50sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="400dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:src="@mipmap/butterfly"
        app:srcCompat="@mipmap/butterfly" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/button13"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="21dp"
            android:layout_toStartOf="@+id/button14"
            android:background="#d3d3d3"
            android:onClick="onClick"
            android:text="4"
            android:textColor="#000"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button14"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/button13"
            android:layout_centerHorizontal="true"
            android:background="#d3d3d3"
            android:onClick="onClick"
            android:text="3"
            android:textColor="#000"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button15"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/button14"
            android:background="#d3d3d3"
            android:onClick="onClick"
            android:text="2"
            android:textColor="#000"
            android:textSize="50sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="29dp"
            android:layout_toStartOf="@+id/button13"
            android:onClick="onClick"
            android:src="@drawable/back" />


    </RelativeLayout>
</RelativeLayout>
