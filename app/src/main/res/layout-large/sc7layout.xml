<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:layout_ma

    <TextView
        android:id="@+id/textView7"
        android:layout_width="550dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:text=" How many Apples?"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="50dp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="530dp"
        android:layout_height="370dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/apple"
        app:srcCompat="@mipmap/apple" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp">

        <Button
            android:id="@+id/button19"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="24dp"
            android:layout_toStartOf="@+id/button20"
            android:background="#d3d3d3"
            android:onClick="onClick"
            android:text="3"
            android:textColor="#000"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button20"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/button19"
            android:layout_alignTop="@+id/button19"
            android:layout_centerHorizontal="true"
            android:background="#d3d3d3"
            android:onClick="onClick"
            android:text="4"
            android:textColor="#000"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button21"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/button20"
            android:background="#d3d3d3"
            android:onClick="onClick"
            android:text="5"
            android:textColor="#000"
            android:textSize="50sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="33dp"
            android:layout_toStartOf="@+id/button19"
            android:onClick="onClick"
            android:src="@drawable/back" />


    </RelativeLayout>
</RelativeLayout>
